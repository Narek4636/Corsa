<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.samsung.corsa.fragments.MainMenuFragment">

    <FrameLayout
        android:id="@+id/status_bar_accel_comp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/pinkhoff_caps"
        android:text="CORSA"
        app:layout_constraintStart_toStartOf="@id/guideline8_main_menu"
        app:layout_constraintEnd_toEndOf="@id/guideline9_main_menu"
        app:layout_constraintTop_toTopOf="@id/guideline10_main_menu"
        app:layout_constraintBottom_toBottomOf="@id/guideline5_main_menu"
        android:textColor="@color/yellow"
        />


    <TextView
        android:id="@+id/title_main_menu"
        style="@style/Title"
        android:layout_width="78dp"
        android:layout_height="37dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/okta_bold"
        android:text="Modes"
        app:layout_constraintBottom_toBottomOf="@id/guideline6_main_menu"
        app:layout_constraintEnd_toStartOf="@id/guideline3_main_menu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline2_main_menu"
        app:layout_constraintTop_toTopOf="@+id/guideline1_main_menu"
        app:layout_constraintVertical_bias="0.49" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/vibro_icon_main_menu"
        android:layout_width="0dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline6_main_menu"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline3_main_menu"
        app:layout_constraintTop_toTopOf="@+id/guideline1_main_menu"
        app:shapeAppearanceOverlay="@style/Rounded" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/modes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline7_main_menu"
        app:layout_constraintEnd_toStartOf="@id/guideline3_main_menu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline2_main_menu"
        app:layout_constraintTop_toTopOf="@+id/guideline5_main_menu"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.008" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>
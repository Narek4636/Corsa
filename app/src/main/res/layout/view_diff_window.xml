<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#99000000"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dismiss_diff_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:elevation="1dp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bg_diff_window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:background="@drawable/rounded_corners"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="@id/guideline4_diff_window"
        app:layout_constraintEnd_toEndOf="@id/guideline2_diff_window"
        app:layout_constraintStart_toStartOf="@id/guideline1_diff_window"
        app:layout_constraintTop_toTopOf="@id/guideline3_diff_window" />

    <TextView
        android:id="@+id/title_diff_window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:elevation="2dp"
        android:fontFamily="@font/exo_2_extrabold"
        android:gravity="center"
        android:text="CHOOSE DIFFICULTY"
        android:textColor="@color/white"
        app:layout_constraintDimensionRatio="8:1"
        app:layout_constraintEnd_toEndOf="@id/guideline7_diff_window"
        app:layout_constraintStart_toStartOf="@id/guideline6_diff_window"
        app:layout_constraintTop_toTopOf="@id/guideline5_diff_window" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diff_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline9_diff_window"
        app:layout_constraintEnd_toEndOf="@id/guideline11_diff_window"
        app:layout_constraintStart_toStartOf="@id/guideline10_diff_window"
        app:layout_constraintTop_toTopOf="@id/guideline8_diff_window" />

<!--    <com.google.android.material.imageview.ShapeableImageView-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:elevation="4dp"-->
<!--        android:src="@drawable/ic_baseline_help_outline_24"-->
<!--        app:layout_constraintDimensionRatio="1:1"-->
<!--        app:layout_constraintStart_toStartOf="@id/guideline12_diff_window"-->
<!--        app:layout_constraintEnd_toEndOf="@id/guideline11_diff_window"-->
<!--        app:layout_constraintTop_toTopOf="@id/guideline9_diff_window"-->
<!--        />-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


</androidx.constraintlayout.widget.ConstraintLayout>
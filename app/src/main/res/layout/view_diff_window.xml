<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="3dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/exo_2_extrabold"
        android:text="CHOOSE DIFFICULTY"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintDimensionRatio="9:1"
        app:layout_constraintEnd_toEndOf="@id/guideline7_diff_window"
        app:layout_constraintStart_toStartOf="@id/guideline6_diff_window"
        app:layout_constraintTop_toTopOf="@id/guideline5_diff_window" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bg_diff_window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="@id/guideline4_diff_window"
        app:layout_constraintEnd_toEndOf="@id/guideline2_diff_window"
        app:layout_constraintStart_toStartOf="@id/guideline1_diff_window"
        app:layout_constraintTop_toTopOf="@id/guideline3_diff_window" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7_diff_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ProductionGuessActivity">

    <TextView
        android:id="@+id/title_production_guess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/archivo_bold"
        android:text="When the Production Started?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/right_ans_production_guess"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_answer_background"
        android:elevation="1dp"
        android:fontFamily="@font/epilogue_extrabold_italic"
        android:padding="6dp"
        android:text="RIGHT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/image_production_guess"
        app:layout_constraintEnd_toEndOf="@+id/image_production_guess"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_production_guess"
        app:layout_constraintTop_toTopOf="@+id/image_production_guess" />

    <TextView
        android:id="@+id/wrong_ans_production_guess"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_answer_background"
        android:backgroundTint="@color/red"
        android:elevation="1dp"
        android:fontFamily="@font/epilogue_extrabold_italic"
        android:padding="6dp"
        android:text="WRONG"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/image_production_guess"
        app:layout_constraintEnd_toEndOf="@+id/image_production_guess"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_production_guess"
        app:layout_constraintTop_toTopOf="@+id/image_production_guess" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_production_guess"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_production_guess"
        app:layout_constraintVertical_bias="0.108"
        app:shapeAppearanceOverlay="@style/Rounded"
        tools:visibility="visible" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_black_production_guess"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/black_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_production_guess"
        app:layout_constraintVertical_bias="0.108"
        app:shapeAppearanceOverlay="@style/Rounded"
        tools:visibility="visible" />

    <Button
        android:id="@+id/continue_production_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="13dp"
        android:text="Continue"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_production_guess"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/ans1_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/ans2_production_guess"
        app:layout_constraintEnd_toStartOf="@+id/guideline2_prod_guess"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/image_production_guess"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ans3_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/ans4_production_guess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans2_production_guess"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/ans4_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/guideline5_prod_guess"
        app:layout_constraintEnd_toStartOf="@+id/guideline2_prod_guess"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/ans3_production_guess"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/ans2_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/ans3_production_guess"
        app:layout_constraintEnd_toStartOf="@+id/guideline2_prod_guess"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/ans1_production_guess"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
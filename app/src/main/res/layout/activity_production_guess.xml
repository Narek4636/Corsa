<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".modes.ProductionGuessActivity">

    <TextView
        android:id="@+id/return_button_prod_guess"
        style="@style/Menu_button"
        app:layout_constraintStart_toStartOf="@+id/guideline6_prod_guess"
        app:layout_constraintTop_toTopOf="@+id/guideline7_prod_guess" />

    <TextView
        android:id="@+id/title_production_guess"
        style="@style/Title"
        android:fontFamily="@font/exo_2_extrabold_italic"
        android:text="When the Production Started?"
        app:layout_constraintBottom_toTopOf="@+id/guideline3_prod_guess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7_prod_guess"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/right_ans_production_guess"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_answer_background"
        android:elevation="1dp"
        android:fontFamily="@font/epilogue_extrabold_italic"
        android:padding="6dp"
        android:text="RIGHT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/image_production_guess"
        app:layout_constraintEnd_toEndOf="@+id/image_production_guess"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_production_guess"
        app:layout_constraintTop_toTopOf="@+id/image_production_guess" />

    <TextView
        android:id="@+id/wrong_ans_production_guess"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_answer_background"
        android:backgroundTint="@color/red"
        android:elevation="1dp"
        android:fontFamily="@font/epilogue_extrabold_italic"
        android:padding="6dp"
        android:text="WRONG"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/image_production_guess"
        app:layout_constraintEnd_toEndOf="@+id/image_production_guess"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_production_guess"
        app:layout_constraintTop_toTopOf="@+id/image_production_guess" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_production_guess"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_pic"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toTopOf="@+id/guideline3_prod_guess"
        app:layout_constraintStart_toStartOf="@id/guideline1_prod_guess"
        app:layout_constraintEnd_toStartOf="@id/guideline2_prod_guess"
        app:shapeAppearanceOverlay="@style/Rounded"
        tools:layout_editor_absoluteX="11dp"
        tools:visibility="visible" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_black_production_guess"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/black_background"
        android:visibility="invisible"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toTopOf="@+id/guideline3_prod_guess"
        app:layout_constraintStart_toStartOf="@id/guideline1_prod_guess"
        app:layout_constraintEnd_toStartOf="@id/guideline2_prod_guess"
        app:shapeAppearanceOverlay="@style/Rounded"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/ans1_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/ans2_production_guess"
        app:layout_constraintEnd_toStartOf="@+id/guideline2_prod_guess"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/image_production_guess"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ans3_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/ans4_production_guess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/ans2_production_guess"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/ans4_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/guideline5_prod_guess"
        app:layout_constraintEnd_toStartOf="@+id/guideline2_prod_guess"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/ans3_production_guess"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/ans2_production_guess"
        style="@style/Guess_answer"
        app:layout_constraintBottom_toTopOf="@+id/ans3_production_guess"
        app:layout_constraintEnd_toStartOf="@+id/guideline2_prod_guess"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline1_prod_guess"
        app:layout_constraintTop_toBottomOf="@+id/ans1_production_guess"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.975" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1593715" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.003" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7_prod_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.004" />

</androidx.constraintlayout.widget.ConstraintLayout>
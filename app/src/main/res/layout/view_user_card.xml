<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.65"
        android:background="@drawable/button_left_round_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="10:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pic_bg_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3.5dp"
        android:background="@color/gulf_blue"
        android:elevation="2dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@id/button_user"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/button_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/button_user"
        app:layout_constraintTop_toTopOf="@id/button_user"
        app:shapeAppearanceOverlay="@style/Circular" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pic_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:elevation="2dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@id/pic_bg_profile"
        app:layout_constraintEnd_toEndOf="@id/pic_bg_profile"
        app:layout_constraintStart_toStartOf="@id/pic_bg_profile"
        app:layout_constraintTop_toTopOf="@id/pic_bg_profile" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:textColor="@color/yellow"
        android:text="1. "
        android:fontFamily="@font/exo_2_extrabold"
        android:textAlignment="viewStart"
        android:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="@id/guideline1_user"
        app:layout_constraintStart_toStartOf="@id/guideline3_user"
        app:layout_constraintBottom_toBottomOf="@id/guideline2_user"
        app:layout_constraintDimensionRatio="1:1"
        />

    <TextView
        android:id="@+id/username_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Ulugbek"
        android:textAlignment="viewStart"
        android:fontFamily="@font/exo_2_bold"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="0.0000001dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="@id/guideline5_user"
        app:layout_constraintTop_toTopOf="@id/guideline1_user"
        app:layout_constraintBottom_toBottomOf="@id/guideline2_user"
        app:layout_constraintDimensionRatio="6:1"
        />

    <TextView
        android:id="@+id/rating_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:fontFamily="@font/exo_2_bold"
        android:textColor="@color/white"
        android:elevation="4dp"
        android:text="100XP"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="0.0000001dp"
        app:layout_constraintTop_toTopOf="@id/guideline1_user"
        app:layout_constraintBottom_toBottomOf="@id/guideline2_user"
        app:layout_constraintEnd_toEndOf="@id/guideline4_user"
        app:layout_constraintDimensionRatio="3:1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.195" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.RegisterActivity">

    <include layout="@layout/menu_button_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/white"
        app:fontFamily="@font/okta_bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline4_register"
        app:layout_constraintEnd_toEndOf="@id/guideline3_register"
        app:layout_constraintStart_toStartOf="@id/guideline2_register"
        app:layout_constraintTop_toTopOf="@id/guideline1_register" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/username_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="Username"
        android:textColorHint="@color/grey"
        android:background="@drawable/rounded_corners_soft"
        android:backgroundTint="@color/white"
        app:fontFamily="@font/okta_bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline10_register"
        app:layout_constraintEnd_toEndOf="@id/guideline6_register"
        app:layout_constraintStart_toStartOf="@id/guideline5_register"
        app:layout_constraintTop_toTopOf="@id/guideline9_register" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="E-mail"
        android:textColorHint="@color/grey"
        android:background="@drawable/rounded_corners_soft"
        android:backgroundTint="@color/white"
        app:fontFamily="@font/okta_bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline8_register"
        app:layout_constraintEnd_toEndOf="@id/guideline6_register"
        app:layout_constraintStart_toStartOf="@id/guideline5_register"
        app:layout_constraintTop_toTopOf="@id/guideline7_register" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password1_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="Password"
        android:textColorHint="@color/grey"
        android:background="@drawable/rounded_corners_soft"
        android:backgroundTint="@color/white"
        app:fontFamily="@font/okta_bold"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/guideline14_register"
        app:layout_constraintEnd_toEndOf="@id/guideline6_register"
        app:layout_constraintStart_toStartOf="@id/guideline5_register"
        app:layout_constraintTop_toTopOf="@id/guideline13_register" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password2_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:hint="Password"
        android:textColorHint="@color/grey"
        android:background="@drawable/rounded_corners_soft"
        android:backgroundTint="@color/white"
        app:fontFamily="@font/okta_bold"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@id/guideline16_register"
        app:layout_constraintEnd_toEndOf="@id/guideline6_register"
        app:layout_constraintStart_toStartOf="@id/guideline5_register"
        app:layout_constraintTop_toTopOf="@id/guideline15_register" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corners"
        android:text="Register"
        android:textSize="20dp"
        android:gravity="center"
        android:fontFamily="@font/pinkhoff_caps"
        android:textColor="@color/white"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintStart_toStartOf="@id/guideline5_register"
        app:layout_constraintEnd_toEndOf="@id/guideline6_register"
        app:layout_constraintTop_toTopOf="@id/guideline12_register"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_register"
        android:layout_width="60dp"
        android:layout_height="73dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

</androidx.constraintlayout.widget.ConstraintLayout>
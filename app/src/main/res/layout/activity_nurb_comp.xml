<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".NurbCompActivity">


    <TextView
        android:id="@+id/title_nurb_comp"
        style="@style/Title"
        android:fontFamily="@font/exo_2_extrabold"
        android:text="Which Car Is Faster On Nurburgring?"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/name1_nurb_comp"
        style="@style/Comp_carname"
        android:text="FERRARI 599 GTB FIORANO"
        app:layout_constraintBottom_toBottomOf="@+id/image1_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image1_nurb_comp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image1_nurb_comp"
        app:layout_constraintTop_toTopOf="@+id/image1_nurb_comp"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/year1_nurb_comp"
        style="@style/Comp_caryear"
        android:text="2006"
        app:layout_constraintBottom_toBottomOf="@+id/image1_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image1_nurb_comp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image1_nurb_comp"
        app:layout_constraintTop_toBottomOf="@+id/name1_nurb_comp"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/time1_nurb_comp"
        android:text="7:37"
        style="@style/Comp_answer"
        app:layout_constraintBottom_toBottomOf="@+id/image1_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image1_nurb_comp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image1_nurb_comp"
        app:layout_constraintTop_toTopOf="@+id/image1_nurb_comp" />

    <TextView
        android:id="@+id/ms1_nurb_comp"
        style="@style/Comp_answer"
        android:text="M:S"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/image1_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image1_nurb_comp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image1_nurb_comp"
        app:layout_constraintTop_toBottomOf="@+id/time1_nurb_comp"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image1_nurb_comp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test_pic"
        app:layout_constraintDimensionRatio="8:7"
        app:layout_constraintEnd_toEndOf="@id/guideline2_nurb_comp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guideline1_nurb_comp"
        app:layout_constraintTop_toTopOf="@+id/guideline3_nurb_comp"
        app:shapeAppearanceOverlay="@style/Rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image1_black_nurb_comp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/black_background"
        app:layout_constraintDimensionRatio="8:7"
        android:alpha="0.25"
        app:layout_constraintEnd_toEndOf="@id/guideline2_nurb_comp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guideline1_nurb_comp"
        app:layout_constraintTop_toTopOf="@+id/guideline3_nurb_comp"
        app:shapeAppearanceOverlay="@style/Rounded" />

    <TextView
        android:id="@+id/name2_nurb_comp"
        style="@style/Comp_carname"
        android:text="RUF RT12"
        app:layout_constraintBottom_toBottomOf="@+id/image2_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image2_nurb_comp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image2_nurb_comp"
        app:layout_constraintTop_toTopOf="@+id/image2_nurb_comp"
        app:layout_constraintVertical_bias="0.07" />


    <TextView
        android:id="@+id/year2_nurb_comp"
        style="@style/Comp_caryear"
        android:text="2005"
        app:layout_constraintBottom_toBottomOf="@+id/image2_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image2_nurb_comp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image2_nurb_comp"
        app:layout_constraintTop_toBottomOf="@+id/name2_nurb_comp"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/time2_nurb_comp"
        style="@style/Comp_answer"
        android:text="7:25"
        app:layout_constraintBottom_toBottomOf="@+id/image2_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image2_nurb_comp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image2_nurb_comp"
        app:layout_constraintTop_toTopOf="@+id/image2_nurb_comp" />

    <TextView
        android:id="@+id/ms2_nurb_comp"
        style="@style/Comp_answer"
        android:text="M:S"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/image2_nurb_comp"
        app:layout_constraintEnd_toEndOf="@+id/image2_nurb_comp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image2_nurb_comp"
        app:layout_constraintTop_toBottomOf="@+id/time2_nurb_comp"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image2_nurb_comp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="8:7"
        android:scaleType="centerCrop"
        android:src="@drawable/test_pic"
        app:layout_constraintStart_toStartOf="@id/guideline1_nurb_comp"
        app:layout_constraintEnd_toEndOf="@id/guideline2_nurb_comp"
        app:layout_constraintTop_toTopOf="@id/guideline4_nurb_comp"
        app:layout_constraintVertical_bias="0.25"
        app:shapeAppearanceOverlay="@style/Rounded" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image2_black_nurb_comp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="8:7"
        android:scaleType="centerCrop"
        android:src="@drawable/black_background"
        android:alpha="0.25"
        app:layout_constraintStart_toStartOf="@id/guideline1_nurb_comp"
        app:layout_constraintEnd_toEndOf="@id/guideline2_nurb_comp"
        app:layout_constraintTop_toTopOf="@id/guideline4_nurb_comp"
        app:layout_constraintVertical_bias="0.25"
        app:shapeAppearanceOverlay="@style/Rounded" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1_nurb_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2_nurb_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3_nurb_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4_nurb_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />


</androidx.constraintlayout.widget.ConstraintLayout>